<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css">
    <title>Login page</title>
</head>
<body>
    <header>
        <nav>
            <div class="home">
                <a href ="" >
                    <img class = "logo" src="/ressources/logo.png" alt="logo"></img>
                </a>
            </div>
            <div class ="filter">

            </div>
            <div class="shop">
                <a href ="" >
                    <img class = "cart" src="/ressources/Cart.png" alt="cart"></img>
                </a>
            </div>

            <div class="profile">
                    <img class = "account" src="/ressources/Account.png" alt="account"></img>
            </div>

        </div>
        </nav>

    </header>
    <section class = "display">
        <div id="app">
                <div v-for="(image, index) in images">
                    <div class="plant">
                        <img v-bind:src="path + image">
                        <p>{{prices[index]}}</p>
                    </div>
                </div>  
        </div>
            
            
    </section>

    <script type="importmap">
        {
          "imports": {
            "vue": "https://unpkg.com/vue@3/dist/vue.esm-browser.js"
          }
        }
      </script>

      <script type="module">
        import { createApp } from 'vue'
    
        createApp({
        data() {
            return {
                path: "/ressources/",
                images: ['img1.jpg','img2.jpg','img3.png','img4.png'],
                prices: [],
            }
          },
        methods: {
            initializePrices(){
                "<% plants.forEach(plant => { %>"
                 this.prices.push("<%= plant.price %>$")
                "<% }); %>"
            }
        },
        beforeMount(){
            this.initializePrices()
        }
        }).mount('#app')
      </script>

    <script>



       const Account = document.querySelector('.account');
        Account.addEventListener('click', () => {
            const url =  window.location;
            const U = url.pathname.split('/').slice(3,5);
            link = '/api/client/' + U[0] + '/'+ U[1] + '/Profile.html';
            location.href = link;
        });

    </script>
    <footer></footer>
</body>
</html>